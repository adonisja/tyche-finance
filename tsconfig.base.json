{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2021", "DOM"],
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noEmit": false,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@tyche/types": ["packages/types/src"],
      "@tyche/core": ["packages/core/src"],
      "@tyche/ai": ["packages/ai/src"]
    }
  }
}
